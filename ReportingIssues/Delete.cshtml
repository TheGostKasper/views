@model AMS.Models.Models.ReportingIssues

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title">
    <a class="btn btn-secondary btn--icon-text waves-effect" href="~/ReportingIssues/"><span><i class="zmdi zmdi-arrow-back"></i></span></a>
</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ReportingIssues</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.merchantId)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.merchantId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" class="btn btn-outline-primary waves-effect">Delete</button>
        </div>
    }
</div>
