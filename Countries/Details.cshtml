@model AMS.Models.Country

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<header class="m-header">
    <h2 class="m-title">Details</h2>
</header>
<h2 class="title">
    <a class="btn btn-secondary btn--icon-text waves-effect" href="~/countries/"><span><i class="zmdi zmdi-arrow-back"></i></span></a><span> Details</span>
</h2>

<div class="card-block">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameAR)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameAR)
        </dd>

    </dl>
</div>
<p>
    <a class="btn btn-secondary btn--icon-text" href="~/Countries/Edit/@Model.Id"><span><i class="zmdi zmdi-edit zmdi-hc-fw"></i>Edit</span></a>
</p>

