@{
    ViewBag.Title = "Home Page";
}
<style>
    #map-wrapper {
        display: block;
    }

    #map {
        width: 100%;
        height: 562px;
        box-shadow: 1px 3px 5px #ccc;
        border: 1px solid #ccc;
        z-index: 999;
    }

    .map-data {
        font-family: 'Cairo', sans-serif;
        margin: 10px 0px;
        background: #f7f7f7;
        padding: 10px;
        border-radius: 3px;
        box-shadow: 1px 3px 5px #ccc;
        border: 1px solid #ccc;
        position: relative;
        direction: rtl;
        opacity: 0;
        z-index: 9;
        top: -145px;
        font-size: 30px;
    }

    #pac-input {
        display: none;
        width: 100%;
        max-width: 100%;
        border: 1px solid #dfdfdf;
        box-shadow: 1px 1px 6px #ccc;
        padding: 15px;
        font-size: 20px;
        direction: rtl;
        font-family: 'Cairo', sans-serif;
    }

    .coords {
        font-size: 13px;
        font-weight: 600;
    }
</style>
<div>
    <div class="card card-block">
        <h4 class="card-title">Address Location</h4>
        @*<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a href="~/AppClassifcation/Create" class="btn btn-primary waves-effect pull-right" aria-label="Left Align">
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> View
            </a>*@

    </div>
    <div id="map-wrapper">
        <input id="pac-input" class="controls" type="text" placeholder="Search Box">
        <div id="map"></div>
        <div class="map-data">
            @Html.Partial("_Loader")
            <div id="server_msg" class="text-center"></div>
            <div id="rst_data">
                <div class="coords pull-left"></div>
                <div>
                    <label>Country: </label>
                    <span id="map-country"></span>
                </div>
                <div>
                    <label>City: </label>
                    <span id="map-city"></span>
                </div>
                <div>
                    <label>Area: </label>
                    <span id="map-area"></span>
                </div>
                <div>
                    <label>Street: </label>
                    <span id="map-street"></span>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts{
    <script src="~/Scripts/admin.home.js"> </script>
}